@model IEnumerable<CurriculoOnLineMVC.Models.CandidatoPerfil>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Candidato.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perfil.Id)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.CandidatoId }) |
                @Html.ActionLink("Details", "Details", new { id=item.CandidatoId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.CandidatoId })
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<CurriculoOnLineMVC.Models.CandidatoPerfil>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link link-color" id="profissional-tab" data-toggle="tab" href="#profissional" role="tab" aria-controls="profissional" aria-selected="true">Profissional</a>
        </li>
        <li class="nav-item">
            <a class="nav-link link-color" id="beneficio-tab" data-toggle="tab" href="#beneficio" role="tab" aria-controls="beneficio" aria-selected="false">Benefício</a>
        </li>
        <li class="nav-item">
            <a class="nav-link link-color" id="experiencia-tab" data-toggle="tab" href="#experiencia" role="tab" aria-controls="experiencia" aria-selected="false">Experiência</a>
        </li>
        <li class="nav-item">
            <a class="nav-link link-color" id="mercado-tab" data-toggle="tab" href="#mercado" role="tab" aria-controls="mercado" aria-selected="false">Mercado</a>
        </li>
        <li class="nav-item">
            <a class="nav-link link-color" id="habilidade-tab" data-toggle="tab" href="#habilidade" role="tab" aria-controls="habilidade" aria-selected="false">Habilidade</a>
        </li>
        <li class="nav-item">
            <a class="nav-link link-color" id="idioma-tab" data-toggle="tab" href="#idioma" role="tab" aria-controls="idioma" aria-selected="false">Idioma</a>
        </li>
        <li class="nav-item">
            <a class="nav-link link-color" id="ferramenta-tab" data-toggle="tab" href="#ferramenta" role="tab" aria-controls="ferramenta" aria-selected="false">Ferramenta</a>
        </li>
        <li class="nav-item">
            <a class="nav-link link-color active" id="perfil-tab" data-toggle="tab" href="#perfil" role="tab" aria-controls="perfil" aria-selected="false">Perfil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link link-color" id="entrevista-tab" data-toggle="tab" href="#entrevista" role="tab" aria-controls="entrevista" aria-selected="false">Entrevista</a>
        </li>
        <li class="nav-item">
            <a class="nav-link link-color" id="curriculo-tab" data-toggle="tab" href="#curriculo" role="tab" aria-controls="curriculo" aria-selected="false">Currículo</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade" id="profissional" role="tabpanel" aria-labelledby="profissional-tab">...</div>
        <div class="tab-pane fade" id="beneficio" role="tabpanel" aria-labelledby="beneficio-tab">...</div>
        <div class="tab-pane fade" id="experiencia" role="tabpanel" aria-labelledby="experiencia-tab">...</div>
        <div class="tab-pane fade" id="mercado" role="tabpanel" aria-labelledby="mercado-tab">...</div>
        <div class="tab-pane fade" id="habilidade" role="tabpanel" aria-labelledby="habilidade-tab">...</div>
        <div class="tab-pane fade" id="idioma" role="tabpanel" aria-labelledby="idioma-tab">...</div>
        <div class="tab-pane fade" id="ferramenta" role="tabpanel" aria-labelledby="ferramenta-tab">...</div>

        <div class="tab-pane fade show active" id="perfil" role="tabpanel" aria-labelledby="perfil-tab">

            <div class="card mt-3">
                <div class="card-body">

                    <div class="form-group mx-sm-3 mb-2">

                        <form class="form-inline" method="post">
                            <div class="form-group mb-2">
                                <label for="staticCodigo" class="sr-only">Codigo</label>
                                <input type="text" readonly class="form-control-plaintext" id="staticCodigo" value="Cód. Profissional">
                            </div>

                            <div class="form-group mx-sm-3 mb-2">
                                <label for="inputText" class="sr-only">Codigo</label>
                                <input type="text" class="form-control" id="inputText" name="id" placeholder="Código">
                                @*<select asp-for="@Model.ToList()[i].CandidatoId" class="form-control" name="id" asp-items="ViewBag.CandidatoId"></select>*@
                            </div>

                            <div class="form-group mx-sm-3 mb-2">
                                <a href="#"><i class="fa fa-table fa-2x" aria-hidden="true"></i></a>
                            </div>

                            <button type="submit" class="btn btn-success mb-2 mr-2" value="Details">Procurar</button>
                            <button type="submit" class="btn btn-outline-success mb-2">Limpar</button>
                        </form>
                    </div>
                </div>
            </div>
            <form method="get" asp-action="Delete">
                <div class="card my-3">
                    @{
                        var index = 0;

                        for (var i = 0; i < @Model.ToList().Count; i++)
                        {
                            index = i;
                        }
                        if (@Model.ToList()[index].Candidato.Id == ViewBag.CandidatoId)
                        {
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-sm-0 ml-3">
                                        @Html.DisplayNameFor(model => model.ToList()[index].Candidato.Id)
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control text-center" name="id" value="@Model.ToList()[index].Candidato.Id">
                                        @*@Html.DisplayFor(model => model.ToList()[index].Candidato.Id)*@
                                    </div>
                                    <div class="col-sm-0">
                                        @Html.DisplayNameFor(model => model.ToList()[index].Candidato.Nome)
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control text-center" name="nome" value="@Model.ToList()[index].Candidato.Nome">
                                        @*@Html.DisplayFor(model => model.ToList()[index].Candidato.Nome)*@
                                    </div>
                                </div>
                            </div>
                        }
                        else if (ViewBag.CandidatoId != null)
                        {
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-sm-0 ml-3">
                                        @*<label>Código:</label>*@
                                        @Html.DisplayNameFor(model => model.ToList()[index].Candidato.Id)
                                    </div>
                                    <div class="col-sm-2">
                                        @*<label>@ViewBag.CandidatoId</label>*@
                                        <input type="text" class="form-control text-center" name="id" value="@ViewBag.CandidatoId">
                                        @*<input class="text-center" type="text" disabled name="id" id="candidato-id" value="@ViewBag.CandidatoId">*@
                                        @*@Html.DisplayFor(model => model.ToList()[index].Candidato.Id)*@
                                    </div>
                                    <div class="col-sm-0">
                                        @*<label>Nome:</label>*@
                                        @Html.DisplayNameFor(model => model.ToList()[index].Candidato.Nome):
                                    </div>
                                    <div class="col-sm-3">
                                        @*<label>@ViewBag.CandidatoNome</label>*@
                                        <input type="text" class="form-control text-center" name="nome" value="@ViewBag.CandidatoNome">
                                        @*<input class="text-center" type="text" disabled name="nome" id="nome" value="@ViewBag.CandidatoNome">*@
                                        @*@Html.DisplayFor(model => model.ToList()[index].Candidato.Nome)*@
                                    </div>
                                </div>
                            </div>

                        }

                    }

                    <div class="card-body">

                        <div class="row">

                            @{
                                var perfilIds = ViewBag.PerfilIds;
                                var perfis = ViewBag.perfis;


                                if (perfilIds == null)
                                {
                                    for (var i = 0; i < perfis.Count; i++)
                                    {
                                        <div class="col-sm-3">
                                            <!-- Default unchecked -->
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="defaultUnChecked-@i" name="perfilIdUnChecked[]" value="@perfis[i].Id" >
                                                <label class="custom-control-label" for="defaultUnChecked-@i">@perfis[i].Descricao</label>
                                            </div>
                                        </div>
                                    }

                                }
                                else
                                {
                                    for (var i = 0; i < Model.ToList().Count; i++)
                                    {

                                        if (perfilIds.Contains(@Model.ToList()[i].Perfil.Id))
                                        {
                                            <div class="col-sm-3">
                                                <!-- Default unchecked -->
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="defaultChecked-@i" name="perfilIdChecked[]" value="@Model.ToList()[i].Perfil.Id" checked>
                                                    <label class="custom-control-label" for="defaultChecked-@i">@Model.ToList()[i].Perfil.Descricao</label>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-sm-3">
                                                <!-- Default unchecked -->
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="defaultUnChecked-@i" name="perfilIdUnChecked[]" value="@Model.ToList()[i].Perfil.Id">
                                                    <label class="custom-control-label" for="defaultUnChecked-@i">@Model.ToList()[i].Perfil.Descricao</label>
                                                </div>
                                            </div>
                                        }

                                    }

                                }

                            }

                        </div>
                        <!--Fim Linha-->
                        <div class="mt-3 text-center">
                            <button type="submit" class="btn btn-success mb-2 mr-2">Adicionar</button>
                            <button type="submit" class="btn btn-danger mb-2 mr-2">Remover</button>
                            <button type="submit" class="btn btn-outline-success mb-2">Voltar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!--Fim perfil-tab-->
    </div>
</div>